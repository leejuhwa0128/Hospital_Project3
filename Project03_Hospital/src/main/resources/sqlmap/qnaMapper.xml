<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hospital.mapper.QnaMapper">

    <!-- QnA 전체 조회 -->
    <select id="selectAllQna" resultType="com.hospital.vo.QnaVO">
        SELECT
            qna_id AS qnaId,
            patient_user_id AS patientUserId,
            question,
            answer,
            is_secret AS isSecret,
            created_at AS createdAt
        FROM customer_qna
        ORDER BY qna_id DESC
    </select>
</mapper>